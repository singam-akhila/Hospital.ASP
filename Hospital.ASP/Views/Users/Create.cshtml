@model UserViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add User</h1>

<form asp-controller="Users" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="mb-2">
                <label asp-for="Username" class="form-label"></label>
                <input type="text" asp-for="Username" class="form-control" />
                <span asp-validation-for="Username"></span>
            </div>
            <div class="mb-2">
                <label asp-for="EmailId" class="form-label"></label>
                <input type="text" asp-for="EmailId" class="form-control" />
                <span asp-validation-for="EmailId"></span>
            </div>
            <div class="mb-2">
                <label asp-for="FullName" class="form-label"></label>
                <input type="text" asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Role" class="form-label"></label>
                <input type="text" asp-for="Role" class="form-control" />
                <span asp-validation-for="Role"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Password" class="form-label"></label>
                <input type="text" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="mt-2 d-grid">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>
    </div>
    <div><a asp-controller="DoctorHome" asp-action="Index">Back to Admin Page</a></div>
</form>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}