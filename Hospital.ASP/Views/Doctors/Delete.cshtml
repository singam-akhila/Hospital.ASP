@model DoctorViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Doctor Details</h1>

<div class="row">
    <div class="col-md-5">
        <ul class="list-group">
            <li class="list-group-item"><b>Doctor Name :</b>@Model.DoctorName</li>
            <li class="list-group-item"><b>Experience :</b>@Model.Experience</li>
            <li class="list-group-item"><b>Specialization :</b>@Model.SpecializationName</li>
            <li class="list-group-item"><b>Qualification :</b>@Model.Qualification</li>
        </ul>
        <div>
            Are sure do you want to delete this Doctor?
        </div>
        <div>
            <form asp-controller="Doctors" asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
        <a asp-controller="Doctors" asp-action="Index">Back to List</a>
    </div>
</div>
