@model IEnumerable<DoctorViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-7">
        <div class="row">
            <div class="col">
                <h2>List of Doctors</h2>
            </div>
            <div class="col text-end">
                <a asp-controller="Doctors" asp-action="Create" class="btn btn-warning">Add new Doctor</a>
            </div>
        </div>
        <div class="row">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Doctor Name</th>
                        <th>Specialization</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DoctorName</td>
                            <td>@item.SpecializationName</td>
                            <td>
                                <a asp-controller="Doctors" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-controller="Doctors" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-controller="Doctors" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>