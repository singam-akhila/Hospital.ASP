@model SpecializationViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Add Specialization </h1>

<form asp-controller="Specialization" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="mb-2">
            <label asp-for="SpecializationName" class="form-label"></label>
            <input type="text" asp-for="SpecializationName" class="form-control" />
            <span asp-validation-for="SpecializationName"></span>
        </div>             
            <div class="mt-2 d-grid"><input type="submit" class="btn btn-primary" value="Add New" />
        </div>
    </div>
    </div>
    </form> 
@section Scripts{     
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}